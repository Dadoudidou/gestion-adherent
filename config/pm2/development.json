{
    "apps" : [
        {
            "name": "Application",
            "exec_mode": "fork_mode",
            "script": "build/server.js",
            "watch": ["build"]
        },
        {
            "name": "server",
            "script": "./node_modules/.bin/webpack",
            "args" : "--config webpack.server.config.js --watch"
        },
        {
            "name": "client",
            "script": "npm",
            "args" : "run start:client"
        }
    ]
}