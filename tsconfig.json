{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDirs": ["src", "stories"],
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "es5",
        //"moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
        ],
        "jsx": "react",
        "paths": {
            "@shared/*": ["src/shared/*"],
            "@server/*": ["src/server2/*"],
            "@client/*": ["src/client2/*"],
            "@modules/*": ["src/modules/*"]
        }
    }
}